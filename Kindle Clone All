//input : "Hello World"
//output : "Hello dlroW"
using System;
using System.Text;
public class HelloWorld
{
    public static void Main(string[] args)
    {
        string s = "Hello World";
        String[] arr = s.Split(' ');
        StringBuilder sb = new StringBuilder();
        sb.Append(arr[0]);
        sb.Append(' ');
        string str = arr[1];
        int i = 0 ;
        int j = str.Length -  1 ;
        char[] ch = str.ToCharArray();
        while(i < j)
        {
            char cha = ch[i];
            ch[i] = ch[j];
            ch[j] = cha ;
            i++;
            j--;
        }
       sb.Append(ch);
        Console.WriteLine (sb.ToString());
    }
}

